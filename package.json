{
  "name": "hotaly-prev",
  "private": true,
  "version": "0.0.0",
  "description": "Monorepo HOTALY PREV Phase 0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "setup": "node scripts/allocate-ports.cjs",
    "db": "docker compose --env-file .env.ports up -d && npm run -w backend prisma:migrate && npm run -w backend prisma:seed",
    "api": "npm run -w backend dev",
    "front": "npm run -w frontend dev",
    "start": "node scripts/start-all.cjs",
    "stop": "node scripts/stop-all.cjs",
    "quick": "node scripts/quick-start.cjs",
    "shutdown": "node scripts/shutdown.cjs",
    "close": "node scripts/shutdown.cjs",
    "dev:local": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "deploy": "echo 'DÃ©ploiement: copiez deploy.ps1 sur le serveur et exÃ©cutez-le'"
  },
  "devDependencies": {
    "detect-port": "^1.6.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  }
}
